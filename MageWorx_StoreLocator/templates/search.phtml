        function reverseGeocode(lat, lng, callback) {
            if (!window.google || !google.maps || !google.maps.Geocoder) {
                log('Google Maps not available');
                callback(null);
                return;
            }

            const geocoder = new google.maps.Geocoder();

            geocoder.geocode({ location: { lat, lng } }, function (results, status) {
                if (status !== 'OK' || !results.length) {
                    log('Reverse geocode failed:', status);
                    callback(null);
                    return;
                }

                const geo = {
                    address: results[0].formatted_address,
                    city: '',
                    region: '',
                    postcode: '',
                    country: ''
                };

                results[0].address_components.forEach(function (c) {
                    if (c.types.includes('locality')) geo.city = c.long_name;
                    if (c.types.includes('administrative_area_level_1')) geo.region = c.long_name;
                    if (c.types.includes('postal_code')) geo.postcode = c.long_name;
                    if (c.types.includes('country')) geo.country = c.short_name;
                });

                callback(geo);
            });
        }
