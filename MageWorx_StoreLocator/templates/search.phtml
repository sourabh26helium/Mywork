                        return;
                    }

                    fetchNearestStore({
                        address: [geo.city, geo.region, geo.postcode, 'Australia'].filter(Boolean).join(', '),
                        city: geo.city,
                        region: geo.region,
                        postcode: geo.postcode,
                        country: 'AU'
                    });
                })
                .fail(function () {
                    log('Fastly request failed');
                    markDone();
                });
        }

        function updateTopBarStoreLabel(storeName, postcode) {
            const $label = $('.top-bar .set-my-locaton'); // ⬅ FIXED typo

            if (!$label.length) {
                console.warn('[StoreUI] Top bar label not found');
                return;
            }

            const text = postcode
                ? `Your store: ${storeName}, ${postcode}`
                : `Your store: ${storeName}`;

            $label.text(text);

            console.log('[StoreUI] Top bar updated →', text);
        }
        
        $(window).on('load', function () {

            // TEST MODE
            const param = parseInt(getUrlParam('param'), 10);
            if (LOCATION_MAP[param]) {
                log('Using TEST LOCATION:', param);
                fetchNearestStore(LOCATION_MAP[param]);
                return;
            }

            // GEOIP / Browser GEO (preferred)
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(
                    function (pos) {
                        reverseGeocode(pos.coords.latitude, pos.coords.longitude, function (geo) {
                            if (!geo || geo.country !== 'AU') {
                                resolveUsingFastly();
                                return;
                            }

                            fetchNearestStore({
                                address: geo.address,
                                lat: pos.coords.latitude,
                                lng: pos.coords.longitude,
                                city: geo.city,
                                region: geo.region,
                                postcode: geo.postcode,
                                country: geo.country
                            });
                        });
                    },
                    function () {
                        log('Browser GEO denied → Fastly fallback');
                        resolveUsingFastly();
                    },
                    { timeout: 8000 }
                );
            } else {
                resolveUsingFastly();
            }
        });
    });
